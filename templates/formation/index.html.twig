{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
<h1> List Des Formation:</h1>

<table class="table">
    <thead class="thead-light">
      <tr>
        
        <th scope="col">Titre Formation</th>
        
      </tr>
    </thead>
    <tbody>
      {% for formation in formations  %}
      <tr>
        <td>                                  
            <!--json data 'id':formation.id-->
            <a href="{{ path('show_formation',{'id':formation.id}) }}">
             {{formation}}
            </a> 
            </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>



{% endblock %}
